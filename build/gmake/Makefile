ifndef config
  config=debug
endif
export config

PROJECTS := sample pelet tests unit_test++ unit_test++_test

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

sample: pelet tests
	@echo "==== Building sample ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f sample.make

pelet: 
	@echo "==== Building pelet ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f pelet.make

tests: pelet unit_test++
	@echo "==== Building tests ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f tests.make

unit_test++: 
	@echo "==== Building unit_test++ ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f unit_test++.make

unit_test++_test: unit_test++
	@echo "==== Building unit_test++_test ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f unit_test++_test.make

clean:
	@${MAKE} --no-print-directory -C . -f sample.make clean
	@${MAKE} --no-print-directory -C . -f pelet.make clean
	@${MAKE} --no-print-directory -C . -f tests.make clean
	@${MAKE} --no-print-directory -C . -f unit_test++.make clean
	@${MAKE} --no-print-directory -C . -f unit_test++_test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   sample"
	@echo "   pelet"
	@echo "   tests"
	@echo "   unit_test++"
	@echo "   unit_test++_test"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
